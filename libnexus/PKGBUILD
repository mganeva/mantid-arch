# Maintainer: Ross Whitfield <whitfieldre@ornl.gov>
# Contributor: Harry Jeffery <harry|@|exec64|.|co|.|uk>

pkgname=libnexus
pkgver=4.3.3
pkgrel=1
pkgdesc="libnexus provides functionality for loading/saving the nexus file format for scientific data"
url="http://www.nexusformat.org/"
arch=('x86_64' 'i686')
license=('GPL')
depends=('hdf5')
optdepends=('hdf4: hdf4 file format support')
source=("https://github.com/nexusformat/code/archive/${pkgver}.tar.gz")
sha1sums=('89f1e7ec5706868f9a488a44aeb2305587ab5180')

build() {
  cd "${srcdir}/code-${pkgver}"
  ./autogen.sh
  ./configure --prefix="${pkgdir}/usr"
  make
}

package() {
  cd "${srcdir}/code-${pkgver}"
  make install
}

